<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="24dp"
    android:gravity="center"
    android:baselineAligned="false">

    <!-- Left Pane: Banner -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/banner_header"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <!-- Right Pane: Buttons Grid -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_full_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_full_list"
                android:textSize="18sp"
                android:padding="16dp"
                android:backgroundTint="@color/colorPrimary"/>

            <Button
                android:id="@+id/btn_favorite_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/menu_favorite_country"
                android:textSize="18sp"
                android:padding="16dp"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_input_stickers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/menu_input_stickers"
                android:textSize="18sp"
                android:padding="16dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_nivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/menu_nivel"
                android:textSize="18sp"
                android:padding="16dp"
                android:backgroundTint="@color/colorSecondary"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
