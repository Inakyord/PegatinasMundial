<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#f0f0f0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nivel_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nivel_instruction"
        android:textSize="16sp"
        android:layout_marginBottom="40dp"/>

    <!-- Level Visual Indicator -->
    <View
        android:id="@+id/view_level_bubble"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circle_shape" 
        android:layout_marginBottom="32dp"/>
        <!-- Note: We'll create a shape drawable or just use a color in code if simple -->

    <TextView
        android:id="@+id/tv_level_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nivel_unleveled"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF0000"/>

</LinearLayout>
