<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/headers_bg"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtrar por:"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <Spinner
                android:id="@+id/spinner_filter_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <Switch
                android:id="@+id/switch_filter_missing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faltantes"
                android:layout_weight="1"/>
            
            <Switch
                android:id="@+id/switch_filter_repeated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repetidos"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compartir"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_checklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
